#!/bin/bash
# Makes a tarball release

DIRS="doc patches src"
DOCS="Bugs.txt INSTALLATION README To-Do"
FILES="install version"
SPKVER=$(./version)
RELDIR=speakup-${SPKVER}
REL=${RELDIR}.tar.bz2

mkdir -p ${RELDIR}
cp -R ${DIRS} ${DOCS} ${FILES} ${RELDIR}

rm -rf ${RELDIR}/src/*.ko ${RELDIR}/src/*.o ${RELDIR}/src/*.mod.c

tar -cjf ${REL} ${RELDIR}
echo "Produced ${REL}"
rm -rf ${RELDIR}

